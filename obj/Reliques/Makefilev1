IDIR =lib
CC=gcc
CFLAGS=-I$(IDIR)

ODIR=obj/Debug
#LDIR =../lib

LIBS=-lm

_DEPS = Bateau.h Allegro.h Casetouche.h Cuirasse.h Destroyer.h Fusee.h Menu.h Objet.h Partie.h Sousmarin.h
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ = main.o Bateau.o Allegro.o Casetouche.o Cuirasse.o Destroyer.o Fusee.o Menu.o Objet.o Partie.o Sousmarin.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))


$(ODIR)/%.o: %.cpp $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

make: $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS) #$(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o
